@using Microsoft.AspNetCore.Identity
@using B.HardwareTown.ApplicationCore.Models

@inject SignInManager<Customer> SignInManager
@inject UserManager<Customer> UserManager

@if (SignInManager.IsSignedIn(User))
{
	<li class="nav-item dropdown">
		<form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">
			<a class="nav-link dropdown-toggle text-white mx-1 nav-link m-0 p-2 mt-2" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"  style="font-size: 1.1rem;">
				<i class="fas fa-user fa-lg text-warning mx-1"></i> <span class="text-white">@UserManager.GetUserName(User)</span>
			</a>
			<div class="dropdown-menu" aria-labelledby="navbarDropdown">
				<a class="dropdown-item" href="#">View purchases</a>
				<a class="dropdown-item" href="#">Manage Account</a>
				<div class="dropdown-divider"></div>
				<button class="dropdown-item btn-link" type="submit">Log out</button>
			</div>
		</form>
	</li>
}
else
{
	<li class="nav-item">
		<a class="nav-link btn btn-primary btn-sm px-4 m-2" asp-controller="Account" asp-action="Login"><span class="text-light">Log in</span></a>
	</li>
	<li class="nav-item">
		<a class="nav-link btn btn-light btn-sm px-4 m-2" asp-controller="Account" asp-action="Register"><span class="text-dark">Register</span></a>
	</li>
}
