@{
    ViewData["Title"] = "Log in";
}

<div class="row">
    <div class="col-md-4">
		<section>
			<h1>Log in</h1>
			<br />
			<form method="post">
				<div asp-validation-summary="All" class="text-danger"></div>
				<div class="form-group">
					<label>Email address</label>
					<input class="form-control" />
					<span class="text-danger"></span>
				</div>
				<div class="form-group">
					<label>Password</label>
					<input class="form-control" />
					<span class="text-danger"></span>
				</div>
				<div class="form-group">
					<p>
						<a asp-action="ForgotPassword">I forgot my password</a>
					</p>
					<button type="submit" class="btn btn-primary">Log in</button>
				</div>
			</form>
		</section>
    </div>
    <div class="col-md-offset-2 col-md-6 ">
        <section>
            <h1>Register</h1>
			<br />
			<div class="form-group">
				<p>In order to shop on this website, you must register.</p>
			</div>
			<div class="form-group">
				<p>Registering allows you to:</p>
				<ul>
					<li>-Define your personal info and delivery address</li>
					<li>-Finalize orders</li>
					<li>-Use acquired coupons</li>
					<li>and many more!</li>
				</ul>
			</div>
			<div class="form-group">
				<button asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" class="btn btn-primary">Sign in</button>
			</div>
        </section>
    </div>
</div>


